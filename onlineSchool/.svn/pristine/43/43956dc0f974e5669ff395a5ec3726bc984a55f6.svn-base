<script type="text/javascript">
    $('#myCard').carousel({interval: 3000});

    $(".category").on("mouseenter",function(){
        let cid = $(this).attr('cid');
        $('#'+cid).show();
        $('#'+cid).hover(function(){
            $('#'+cid).show();
        },function(){
            $('#'+cid).hide();
        });
    }).on("mouseleave",function(){
        let cid = $(this).attr('cid');
        $('#'+cid).hide();
    })

</script>